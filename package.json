{
  "name": "herodotus-evm",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:HerodotusDev/herodotus-evm.git",
  "author": "Marcello Bardus <marcellobardus8@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "custom-env": "^2.0.1",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.0.0",
    "yarn-run-all": "^3.1.1"
  },
  "scripts": {
    "deploy": "npm-run-all -p -l deploy:*; yarn get-env",
    "generic-deploy": "forge script script/Deployment.s.sol:Deployment --ffi --rpc-url $ALCHEMY_URL --etherscan-api-key $ETHERSCAN_API_KEY --private-key $PRIVATE_KEY --broadcast --verify -vvvvv",
    "deploy:goerli": "export $(grep -v '^#' .env.goerli | xargs); yarn generic-deploy",
    "deploy:mumbai": "export $(grep -v '^#' .env.mumbai | xargs); yarn generic-deploy",
    "get-env": "node helpers/get_env_from_latest_run.js"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "rlp": "2.2.7"
  }
}
